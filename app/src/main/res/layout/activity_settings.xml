<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Interface Settings -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/interface_name_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etInterfaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/interface_name_hint"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"/>
    </LinearLayout>

    <!-- Script Management Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/script_management_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Script Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_status_label"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvScriptStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_not_installed"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Script Path -->
            <LinearLayout
                android:id="@+id/layoutScriptPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_path_label"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvScriptPath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="monospace"/>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <Button
                    android:id="@+id/btnInstallScript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_install"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnUninstallScript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_uninstall"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnRunScript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_run"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnStopScript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_stop"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnViewLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_view_log"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/btnClearLog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/script_clear_log"
                    style="@style/Widget.Material3.Button.TextButton"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

</ScrollView>
